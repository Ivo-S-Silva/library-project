<h2>Editing: {{name}}</h2>


<form action="/authors/{{_id}}/edit" method="POST">
  <label> Name:
    <input type="text" name="name" value="{{name}}" required />
  </label>
<br>
  <label> Favourite Food:
      <br>
    <input type="text" name="favouriteFood" value="{{favouriteFood}}" />
  </label>
<br>
  <label> Country:
    <input type="text" name="country" value="{{country}}" />
  </label>
<br>
  <button type="submit"> Edit </button>
</form>
