<h2>Editing: {{book.title}}</h2>


<form action="/books/{{book.id}}/edit" method="POST">
  <label> Title:
    <input type="text" name="title" value="{{book.title}}" required />
  </label>
<br>
  <label> Author:
    <select name="author">
      {{#each authors}}
      <option value="{{_id}}">{{name}}</option>
      {{/each}}
    </select>
  </label>
<br>
  <label> Description:
      <br>
    <textarea name="description" cols="30" rows="4">{{book.description}}</textarea>
  </label>
<br>
  <label> Rate:
    <input type="number" name="rating" min="1" max="10" value="{{book.rating}}"/>
  </label>
<br>
  <button type="submit"> Edit </button>
</form>
