<h2>Editing: {{book.title}}</h2>


<form action="/books/{{book.id}}/edit" method="POST">
  <label> Title:
    <input type="text" name="title" placeholder="{{book.title}}" required />
  </label>
<br>
  <label> Author:
    <input type="text" name="author" placeholder="{{book.author}}"/>
  </label>
<br>
  <label> Description:
      <br>
    <textarea name="description" cols="30" rows="4" placeholder="{{book.description}}"> </textarea>
  </label>
<br>
  <label> Rate:
    <input type="number" name="rating" min="1" max="10" placeholder="{{book.rating}}"/>
  </label>
<br>
  <button type="submit"> Create </button>
</form>
